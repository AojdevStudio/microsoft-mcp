{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/pre-bash-validator.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/code-quality-reporter.py"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/api-standards-checker.py"
          },
          {
            "type": "command",
            "command": "uv run .claude/hooks/universal-linter.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "uv run .claude/hooks/task-completion-enforcer.py"
          }
        ]
      }
    ]
  }
}